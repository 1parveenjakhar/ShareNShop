<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:layout_width="match_parent"
    android:elevation="4dp"
    android:padding="8dp"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/vw_polls_message"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:textStyle="bold"
        android:text="@string/create_a_poll"
        android:drawableStart="@drawable/ic_polls"
        android:drawablePadding="16dp"
        android:gravity="center_vertical"
        android:textColor="@color/grey"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/gallery_message"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:textStyle="bold"
        android:text="@string/photo_video_library"
        android:drawableStart="@drawable/ic_image_library"
        android:drawablePadding="16dp"
        android:gravity="center_vertical"
        android:textColor="@color/grey"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/camera_message"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:textStyle="bold"
        android:text="@string/take_a_photo"
        android:drawableStart="@drawable/ic_camera"
        android:drawablePadding="16dp"
        android:gravity="center_vertical"
        android:textColor="@color/grey"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/file_message"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:textStyle="bold"
        android:text="@string/send_files"
        android:drawableStart="@drawable/ic_file_upload"
        android:drawablePadding="16dp"
        android:gravity="center_vertical"
        android:textColor="@color/grey"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/audio_message"
        android:clickable="true"
        android:drawableStart="@drawable/ic_audio"
        android:drawablePadding="16dp"
        android:gravity="center_vertical"
        android:textColor="@color/grey"
        android:foreground="?attr/selectableItemBackground"
        android:textStyle="bold"
        android:text="@string/send_audio_files"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/location_message"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:drawablePadding="16dp"
        android:gravity="center_vertical"
        android:drawableStart="@drawable/ic_location"
        android:textStyle="bold"
        android:textColor="@color/grey"
        android:text="@string/share_location"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/sticker_message"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:drawablePadding="16dp"
        android:gravity="center_vertical"
        android:drawableStart="@drawable/ic_sticker"
        android:textStyle="bold"
        android:textColor="@color/grey"
        android:text="@string/send_sticker"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/vw_whiteboard_message"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:drawablePadding="16dp"
        android:gravity="center_vertical"
        android:drawableStart="@drawable/ic_collaborative_whiteboard"
        android:textStyle="bold"
        android:textColor="@color/grey"
        android:text="@string/share_whiteboard"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/writeboard_message"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:drawablePadding="16dp"
        android:gravity="center_vertical"
        android:drawableStart="@drawable/ic_collaborative_document"
        android:textStyle="bold"
        android:textColor="@color/grey"
        android:text="@string/share_writeboard"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>

